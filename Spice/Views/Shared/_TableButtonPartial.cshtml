@model int

<td style="width:150px">
    <div class="btn-group" role="group">
        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@Model"><i class="fa-solid fa-pen-to-square"></i></a>

        <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@Model"><i class="fa-solid fa-list"></i></a>

        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@Model"><i class="fa-solid fa-trash"></i></a>
    </div>

</td>